{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2017",
      "lib": [
          "es2017",
          "esnext.asynciterable"
      ],
      "typeRoots": [
          "./node_modules/@types",
          "./types"
      ],
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "removeComments": true,
      "pretty": true,
      "outDir": "./build",
      "rootDir": ".",
      "allowJs": true,
      "noEmit": false,
      "esModuleInterop": true,
      "skipLibCheck": true
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "node_modules",
      "tests"
  ]
}